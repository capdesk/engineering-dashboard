{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:staged": "eslint --fix",
    "format": "prettier --write \"**/*.+(ts|jsx|tsx|json|md|yml)\"",
    "format:staged": "prettier --write",
    "prepare": "husky install",
    "pre-commit": "lint-staged --allow-empty"
  },
  "lint-staged": {
    "*.(ts|tsx|json|md|yml)": "yarn format:staged",
    "services/app/**/*.(ts|tsx)": "yarn lint:staged",
    ".md": "doctoc"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "^1.1.3",
    "lottie-react": "^2.2.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-circular-progressbar": "^2.0.4",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-use": "^17.3.2",
    "react-xarrows": "^2.0.2",
    "recharts": "^2.1.9",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "doctoc": "^2.1.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "volta": {
    "node": "16.13.2",
    "yarn": "1.22.17"
  }
}
